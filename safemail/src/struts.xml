<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 定义系统参数 -->
	<constant name="struts.devMode" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<constant name="struts.i18n.encoding" value="UTF-8" />

	<package name="webmail-base" extends="struts-default">
		<global-results>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
			<result name="root-exception">/WEB-INF/jsp/error.jsp</result>
		</global-results>
		
		<global-exception-mappings>
			<exception-mapping result="root-exception" exception="java.lang.Exception"></exception-mapping>
			<exception-mapping result="error" exception="java.lang.Exception"></exception-mapping>
		</global-exception-mappings>
	</package>
	
    <package name="webmail" extends="webmail-base">
    	<action name="toRegister" class="com.mogu.webmail.action.MailAction" method="toRegister">
    		<result>/WEB-INF/jsp/register.jsp</result>
    	</action>
    	<action name="register" class="com.mogu.webmail.action.MailAction" method="register">
    		<result>/WEB-INF/jsp/login.jsp</result>
    	</action>
    	<action name="toLogin" class="com.mogu.webmail.action.MailAction" method="toLogin">
    		<result name="success">/WEB-INF/jsp/login.jsp</result>
    	</action>
    	<action name="login" class="com.mogu.webmail.action.MailAction" method="login">
    		<result type="redirectAction">main.action</result>
    	</action>
    	<action name="logout" class="com.mogu.webmail.action.MailAction" method="logout">
    		<result type="redirectAction">toLogin.action</result>
    	</action>
    	<action name="main" class="com.mogu.webmail.action.MailAction" method="main">
    		<result>/WEB-INF/jsp/main.jsp</result>
    	</action>
    	<action name="sendMail" class="com.mogu.webmail.action.MailAction" method="sendMail">
    		<result type="redirectAction">main.action</result>
    	</action>
    	<action name="viewMail" class="com.mogu.webmail.action.MailAction" method="viewMail">
    		<result>/WEB-INF/jsp/view-mail/view-mail.jsp</result>
    	</action>
		<action name="*">
			<result>/WEB-INF/jsp/{1}.jsp</result>
		</action>
    </package>
	
</struts>
